@model ProjectWebCuoiKhoa.Models.Cart

@{
    ViewBag.Title = "ShowCheckoutCustomer";
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
}

<link rel="stylesheet" href="~/Content/css/showCheckOut.css" />
    <div class="container mt-4">
        <div class="py-5 text-center">
            <h2 class="myfix-4">Thanh toán</h2>
            <p class="lead">Vui lòng kiểm tra thông tin Khách hàng, thông tin Giỏ hàng trước khi Đặt hàng.</p>
        </div>
        <div class="row">
            <div class="col-md-4 order-md-2 mb-4">
                <h4 class="d-flex justify-content-between align-items-center mb-3">
                    <span class="text-muted">Giỏ hàng</span>
                </h4>
                <ul>
                    <li class="list-group-item d-flex justify-content-between">
                        <h6 class="myfix">
                            <b>Sản phẩm:</b>
                        </h6>
                    </li>
                </ul>
                <ul class="list-group mb-3 list-group-item">
                    @foreach (var item in Model.Items)
                    {
                        <li class="d-flex justify-content-between lh-condensed">
                            <div class="showCartWrapper">
                                <img src="@Url.Content(item._product.ImagePro)" style="height: 100px; width:100px;" />
                                <span class="webkit">
                                    <b>@Html.DisplayFor(model => item._product.NamePro)</b>
                                </span>
                                <div class="amount">
                                    <span class="primary"><b>SL :</b></span>
                                    <span class="text-muted primary margin-left">@item._quantity</span>
                                </div>
                            </div>
                        </li>
                    }
                </ul>
                <ul>
                    <li class="list-group-item d-flex justify-content-between myfix-3">
                        <h6 class="myfix-2"><b>Tổng thành tiền:</b></h6>
                        <strong>@Model.Total_money().ToString("#,##0").Replace(',', '.') Đồng</strong>
                    </li>
                </ul>
            </div>
            @using (Html.BeginForm("CheckOut", "ShoppingCart"))
            {
                <div class="col-md-8 order-md-1">
                    <h4 class="mb-3">Thông tin khách hàng</h4>

                    <div class="col-md-12">
                        <label for="kh_ten">Họ tên:</label>
                        <input type="text" class="form-control" name="NameCus" id="NameCus" placeholder="Nguyễn Văn A" required>
                    </div>
                    <div class="col-md-12">
                        <label for="kh_ID">ID:</label>
                        <input type="number" class="form-control" name="CodeCus" placeholder="0" required>
                    </div>
                    <div class="col-md-12">
                        <label for="kh_gioitinh">Giới tính:</label>
                        <input type="radio" name="kh_gioitinh" id="kh_gioitinh" value="Nam" />Nam
                        <input type="radio" name="kh_gioitinh" id="kh_gioitinh" value="Nữ" />Nữ
                    </div>
                    <div class="col-md-12">
                        <label for="kh_diachi">Địa chỉ:</label>
                        <input type="text" class="form-control" name="AddressDelivery" id="AddressDelivery"
                               placeholder="123 Lũy Bán Bích,Q..." value="" required>
                    </div>
                    <div class="col-md-12">
                        <label for="kh_dienthoai">Điện thoại:</label>
                        <input type="text" class="form-control" name="PhoneCus" id="PhoneCus" placeholder="090123456"
                               value="" required>
                    </div>
                    <div class="col-md-12">
                        <label for="kh_email">Email:</label>
                        <input type="text" class="form-control" name="EmailCus" id="EmailCus"
                               placeholder="you@gmail.com" value="" required>
                    </div>
                    <div class="col-md-12">
                        <label for="kh_ngaysinh">Ngày sinh:</label>
                        <input type="text" class="form-control" name="kh_ngaysinh" id="kh_ngaysinh" placeholder="1/1/2003"
                               value="" required>
                    </div>
                    <div class="col-md-12">
                        <label for="kh_cmnd">CMND:</label>
                        <input type="text" class="form-control" name="CmndCus" id="CmndCus" value="" placeholder="123456789"
                               required>

                        <h4 class="col-md-12">Hình thức thanh toán:</h4>

                        <div class="d-block my-3">
                            <div class="custom-control custom-radio">
                                <input id="httt-1" name="httt_ma" type="radio" class="custom-control-input" required=""
                                       value="1">
                                <label class="custom-control-label" for="httt-1">Tiền mặt</label>
                            </div>
                            <div class="custom-control custom-radio">
                                <input id="httt-2" name="httt_ma" type="radio" class="custom-control-input" required=""
                                       value="2">
                                <label class="custom-control-label" for="httt-2">Chuyển khoản</label>

                            </div>
                            <hr class="mb-4">
                            <input type="submit" value="CheckOut" class="btn btn-success" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>



